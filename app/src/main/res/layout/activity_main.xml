<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"

    android:background="@color/colorMainBG"
    tools:context="com.example.android.fivethingsyoudidntknow.MainActivity">

    <TextView
        android:paddingTop="@dimen/top_first_act"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/header"
        android:textSize="20dp"
        android:id="@+id/textView"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:textStyle="bold"
        android:textColor="#040404" />

    <Button
        style="@style/custom_button"
        android:text="@string/solution_header"
        android:id="@+id/solutions"
        android:layout_below="@+id/textView"
        android:onClick="openSolution"
         />

    <Button
        style="@style/custom_button"
        android:text="@string/products_header"
        android:id="@+id/products"
        android:layout_below="@+id/solutions"
        android:onClick="openProduct" />

    <Button
       style="@style/custom_button"
        android:text="@string/events_header"
        android:id="@+id/events"
        android:layout_below="@+id/products"
        android:onClick="openEvents"/>

    <Button
        style="@style/custom_button"
        android:text="@string/world_header"
        android:id="@+id/locations"
        android:layout_below="@+id/events"
        android:onClick="openLocation"/>

    <Button
        style="@style/custom_button"
        android:text="@string/literature_header"
        android:layout_below="@+id/locations"
        android:id="@+id/literature"
        android:onClick="openLiterature"/>

</RelativeLayout>
</ScrollView>